{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Northware Docs",
  "logo": {
    "dark": "/logos/dark.svg",
    "light": "/logos/light.svg"
  },
  "favicon": "/logos/favicon.svg",
  "colors": {
    "primary": "#0891ff",
    "light": "#57b4ff",
    "dark": "#0066b8",
    "anchors": {
      "from": "#0891ff",
      "to": "#57b4ff"
    }
  },
  "font": {
    "headings": {
      "family": "Source Sans Pro"
    },
    "body": {
      "family": "Source Sans Pro"
    }
  },
  "codeBlock": { "mode": "auto" },
  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/ncs-northware/northware"
  },
  "tabs": [
    {
      "name": "Northware UI",
      "url": "ui"
    },
    {
      "name": "API Reference",
      "url": "api-reference"
    }
  ],
  "anchors": [
    {
      "name": "Documentation",
      "icon": "book-open-cover",
      "url": "https://mintlify.com/docs"
    },
    {
      "name": "Community",
      "icon": "slack",
      "url": "https://mintlify.com/community"
    },
    {
      "name": "Blog",
      "icon": "newspaper",
      "url": "https://mintlify.com/blog"
    }
