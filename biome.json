{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "extends": ["ultracite/core", "ultracite/react", "ultracite/next"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main"
  },
  "javascript": {
    "globals": ["React"],
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "rules": {
      "performance": { "noBarrelFile": "warn" },
      "style": {
        "noMagicNumbers": "info",
        "useNamingConvention": {
          "options": { "strictCase": false },
          "level": "error"
        }
      }
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.turbo",
      "!**/.next",
      "!**/tsconfig.tsbuildinfo",
      "!**/dist",
      "!**/build",
      "!**/drizzle-migrations",
      "!**/storybook-static"
    ]
  }
}
