{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main"
  },
  "javascript": {
    "globals": ["React"]
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {}
        }
      }
    }
  },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/.turbo",
      "**/.next",
      "tsconfig.tsbuildinfo",
      "**/dist/**",
      "**/drizzle-migrations/**"
    ]
  }
}
