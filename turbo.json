{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL", "CLERK_SECRET_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "storybook-static"
      ]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "//#lint:root": {},
    "//#lint:ci": {},
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "//#format:root": {},
    "tsc-check": {
      "dependsOn": ["^tsc-check"]
    }
  }
}
